# DriveMeter Environment Configuration
# Copy this file to .env and fill in your actual API keys and configuration

# API Configuration Toggle
# Set to 'true' to use real government APIs, 'false' for simulated data
REACT_APP_USE_REAL_API=false

# Email Service Configuration
# Set to 'true' to send real emails, 'false' for email simulation
REACT_APP_USE_REAL_EMAIL=false
REACT_APP_EMAIL_API_KEY=your_sendgrid_api_key_here
REACT_APP_FROM_EMAIL=noreply@drivemeter.com
REACT_APP_FROM_NAME=DriveMeter Team

# Government API Keys
# Vahan Database API (Vehicle Registration Information)
REACT_APP_VAHAN_API_KEY=your_vahan_api_key_here
REACT_APP_VAHAN_BASE_URL=https://vahan.parivahan.gov.in/api

# e-Challan API (Traffic Violation Information)
REACT_APP_ECHALLAN_API_KEY=your_echallan_api_key_here
REACT_APP_ECHALLAN_BASE_URL=https://echallan.parivahan.gov.in/api

# InstantPay API (Government Data Access Gateway)
REACT_APP_INSTANTPAY_API_KEY=your_instantpay_api_key_here
REACT_APP_INSTANTPAY_ACCOUNT_ID=your_instantpay_account_id_here
REACT_APP_INSTANTPAY_BASE_URL=https://api.instantpay.in

# RapidAPI (Aggregated Vehicle Data)
REACT_APP_RAPIDAPI_KEY=your_rapidapi_key_here
REACT_APP_RAPIDAPI_HOST=vehicle-info-api.rapidapi.com

# Car Marketplace APIs
# CarDekho API
REACT_APP_CARDEKHO_API_KEY=your_cardekho_api_key_here
REACT_APP_CARDEKHO_BASE_URL=https://api.cardekho.com

# Cars24 API
REACT_APP_CARS24_API_KEY=your_cars24_api_key_here
REACT_APP_CARS24_BASE_URL=https://api.cars24.com

# OLX Autos API
REACT_APP_OLX_API_KEY=your_olx_api_key_here
REACT_APP_OLX_BASE_URL=https://api.olx.in

# Spinny API
REACT_APP_SPINNY_API_KEY=your_spinny_api_key_here
REACT_APP_SPINNY_BASE_URL=https://api.spinny.com

# API Base URLs (Optional - defaults provided)
REACT_APP_VAHAN_API_URL=https://vahan.parivahan.gov.in/vahan4dashboard
REACT_APP_ECHALLAN_API_URL=https://echallan.parivahan.gov.in/index
REACT_APP_RTO_API_URL=https://parivahan.gov.in/rcdlstatus

# Application Settings
REACT_APP_API_TIMEOUT=30000
REACT_APP_ENABLE_REAL_API=false

# Authentication Settings
REACT_APP_JWT_SECRET=your_jwt_secret_key_here
REACT_APP_SESSION_TIMEOUT=86400

# Analytics and Tracking (Optional)
REACT_APP_GOOGLE_ANALYTICS_ID=your_ga_id_here
REACT_APP_ENABLE_ANALYTICS=false
